{
  "openapi": "3.0.0",
  "info": {
    "title": "Agroway API",
    "version": "1.0.0",
    "description": "Documentação da API do Agroway",
    "contact": {
      "name": "Agroway Support",
      "email": "support@agroway.com"
    }
  },
  "servers": [
    {
      "url": "https://agro-way-api.onrender.com",
      "description": "servidor em produção"
    },
    {
      "url": "http://localhost:3000",
      "description": "servidor local para testes"
    }
  ],
  "tags": [
    {
      "name": "auth",
      "description": "Operações de autenticação"
    }
  ],
  "paths": {
    "/api/auth/signup": {
      "post": {
        "summary": "signup",
        "description": "Realiza o cadastro de um usuário",
        "operationId": "signup",
        "tags": ["auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Nome do usuário"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Email do usuário"
                  },
                  "telefone": {
                    "type": "string",
                    "format": "telefone",
                    "description": "O seu telefone"
                  },
                  "password": {
                    "type": "string",
                    "description": "Senha do usuário"
                  },
                  "confirmPassword": {
                    "type": "string",
                    "description": "Confirmação da senha do usuário"
                  },
                  "status": {
                    "type": "string",
                    "enum": ["ATIVO", "INATIVO", "PENDENTE", "BANIDO"],
                    "description": "Status do usuario"
                  },
                  "role": {
                    "type": "string",
                    "enum": ["USUARIO", "PRODUTOR", "CONDUTOR"],
                    "description": "Papel do usuário"
                  }
                },
                "required": [
                  "name",
                  "email",
                  "telefone",
                  "password",
                  "confirmPassword",
                  "status",
                  "role"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário cadastrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Requisição inválida",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Mensagem de erro"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Mensagem de erro"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "login",
        "description": "Realiza o login de um usuário",
        "operationId": "login",
        "tags": ["auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Email do usuário"
                  },
                  "password": {
                    "type": "string",
                    "description": "Senha do usuário"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "401": {
            "description": "Credenciais inválidas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Mensagem de erro"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Mensagem de erro"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/api/users": {
      "get": {
        "summary": "users",
        "description": "Lista de usuarios",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "operationId": "user",
        "tags": ["users"],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer",
              "default": 1,
              "minimum": 1
            },
            "description": "Número da página para paginação"
          },
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "type": "integer",
              "default": 10,
              "minimum": 1,
              "maximum": 100
            },
            "description": "Número de usuários por página"
          }
        ],

        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "users": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/User"
                      },
                      "description": "Lista de usuários"
                    },
                    "total": {
                      "type": "integer",
                      "description": "Total de usuários"
                    },
                    "page": {
                      "type": "integer",
                      "description": "Número da página atual"
                    },
                    "limit": {
                      "type": "integer",
                      "description": "Número de usuários por página"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/users/{userId}": {
      "get": {
        "summary": "getUser",
        "description": "Obtém um usuário pelo ID",
        "operationId": "getUser",
        "tags": ["users"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "description": "ID do usuário"
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Mensagem de erro"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Mensagem de erro"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/users/{userId}/driver": {
      "post": {
        "summary": "criar condutores",
        "description": "adicione os dados do condutor",
        "operationId": "criar condutor",
        "tags": ["users"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "description": "ID do usuário"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "driver_license": {
                    "type": "string",
                    "format": "driver_license",
                    "description": "Carta de condução do condutor"
                  },
                  "age": {
                    "type": "string",
                    "description": "Idade do condutor"
                  }
                },
                "required": ["driver_license", "age"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário cadastrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Driver"
                }
              }
            }
          },
          "400": {
            "description": "Requisição mal feita",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Mensagem de erro"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Mensagem de erro"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/cars": {
      "post": {
        "summary": "criar carros",
        "description": "adicione os dados do seu carro",
        "operationId": "criar condutor",
        "tags": ["cars"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "brand": {
                    "type": "string",
                    "description": "marca do veiculo"
                  },
                  "model": {
                    "type": "string",
                    "description": "modelo do veiculo"
                  },
                  "plate": {
                    "type": "string",
                    "description": "matricula do veiculo"
                  },
                  "driverId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Id do condutor associado ao automovel"
                  }
                },
                "required": ["brand", "model", "plate", "driverId"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Carro cadastrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Car"
                }
              }
            }
          },
          "400": {
            "description": "Requisição mal feita",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Mensagem de erro"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Mensagem de erro"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "ID do usuário"
          },
          "name": {
            "type": "string",
            "description": "Nome do usuário"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email do usuário"
          },
          "telefone": {
            "type": "string",
            "format": "telefone",
            "description": "O seu telefone"
          },
          "password": {
            "type": "string",
            "description": "Senha do usuário"
          },
          "confirmPassword": {
            "type": "string",
            "description": "Confirmação da senha do usuário"
          },
          "status": {
            "type": "string",
            "enum": ["ATIVO", "INATIVO", "PENDENTE", "BANIDO"],
            "description": "Status do usuario"
          },
          "role": {
            "type": "string",
            "enum": ["USUARIO", "PRODUTOR", "CONDUTOR"],
            "description": "Papel do usuário"
          }
        },
        "required": [
          "id",
          "name",
          "email",
          "telefone",
          "password",
          "confirmPassword",
          "status",
          "role"
        ]
      },
      "Driver": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "ID do condutor"
          },
          "driver_license": {
            "type": "string",
            "description": "Carta de condução do condutor"
          },
          "age": {
            "type": "integer",
            "format": "int32",
            "description": "Idade do condutor"
          },
          "user_id": {
            "type": "string",
            "format": "uuid",
            "description": "ID do usuário associado ao condutor"
          }
        },
        "required": ["id", "driver_license", "age", "user_id"]
      },
      "Car": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "ID do veiculo"
          },
          "brand": {
            "type": "string",
            "description": "marca do veiculo"
          },
          "model": {
            "type": "string",
            "description": "modelo do veiculo"
          },
          "plate": {
            "type": "string",
            "description": "matricula do veiculo"
          },
          "createAt": {
            "type": "string",
            "description": "data de criação"
          },
          "updatedAt": {
            "type": "string",
            "description": "data de atualização"
          },
          "driverId": {
            "type": "string",
            "format": "uuid",
            "description": "Id do condutor associado ao automovel"
          }
        },
        "required": [
          "id",
          "brand",
          "model",
          "createAt",
          "updatedAt",
          "driverId"
        ]
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Token JWT para autenticação"
      }
    }
  }
}
